pipeline {
  agent { label 'linux'}
  options {
    skipDefaultCheckout(true)
  }
  stages{
    stage('clean workspace') {
      steps {
        cleanWs()
      }
    }
    stage('checkout') {
      steps {
        checkout scm
      }
    }
    stage('terraform-init') {
      steps {
        sh '/bin/terraform init'
      }
    }
    stage('terraform-login') {
      steps {
        sh 'export AWS_ACCESS_KEY_ID=AKIAURVEKQG3PND4EBPW'
        sh 'export AWS_SECRET_ACCESS_KEY=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'
      }
    }
    stage('terraform-apply') {
      steps {
        sh '/bin/terraform apply -auto-approve -no-color'
      }
    }
  }
  post {
    always {
      cleanWs()
    }
  }
}
